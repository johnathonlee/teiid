<!--This script builds a JAR for the CDK -->
<assembly>
  
  <id>cdk-dependencies</id>
  
  <formats>
    <format>dir</format>
  </formats>
  
  <includeBaseDirectory>false</includeBaseDirectory>
  <baseDirectory>teiid-cdk</baseDirectory>
    
  <moduleSets>
    <moduleSet>
        <includeSubModules>true</includeSubModules>
               
        <includes>
        	<include>org.jboss.teiid:teiid-connector-api</include>
            <include>org.jboss.teiid:teiid-connector-sdk</include>
        </includes>
        
        <binaries>        
          <includeDependencies>true</includeDependencies>
          <unpack>false</unpack>
                                    
          <dependencySets>
            <dependencySet>
              <useProjectArtifact>false</useProjectArtifact>
              <unpack>false</unpack>
              <useTransitiveDependencies>false</useTransitiveDependencies>
              <useDefaultExcludes>true</useDefaultExcludes>
              <!-- 
              <excludes>
                <exclude>teiid*</exclude>
                <exclude>jta*</exclude>
              </excludes>
               -->
            </dependencySet>
          </dependencySets>
          
        </binaries>
      
    </moduleSet>
  </moduleSets>
    
</assembly>